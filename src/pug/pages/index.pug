extends ../layout/main

block variables
  - var body__class = 'body'
  - var wrapper__class = 'wrapper'
  - var page = 'index'

block content
  header.header
    a.logo 
      span элитный
      span деловой
      span центр
    .burger
      input#menu-switch(type="checkbox")
      nav#navigation
        ul
          li.active
            a(href="/") Главная
          li
